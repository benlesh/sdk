{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "outDir": "./build",
    "rootDir": ".",
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "sourceRoot": ".",
    "strictNullChecks": true,
    "target": "es6",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "baseUrl": "",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@angular/schematics": [ "./packages/@angular/schematics/src/index" ]
    }
  },
  "exclude": [
    "build/**/*",
    "dist/**/*",
    "node_modules/**/*",
    "tmp/**/*",
    "packages/@angular/schematics-cli/schematics/**"
  ]
}
